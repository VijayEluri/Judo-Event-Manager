<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
 
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="EventManager $APP-VERSION" location="applications"/>
 
    <shortcut
        name="EventManager $APP-VERSION"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\EventManager.jar"
        commandLine=""
        description="EventManager"
        initialState="noShow">
    </shortcut>
 
    <shortcut
        name="Uninstaller"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstaller\uninstaller.exe"
        commandLine=""
        description="EventManager uninstaller">
    </shortcut> 
</shortcuts>
